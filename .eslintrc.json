{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true  
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "jsx-a11y", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/prop-types": "off",  
    "react/react-in-jsx-scope": "off",  // Ab React 17 nicht mehr erforderlich
    "no-undef": ["error", { "typeof": false }]  // Optional: Deaktiviert 'no-undef' f√ºr Testumgebungen
  }
}
